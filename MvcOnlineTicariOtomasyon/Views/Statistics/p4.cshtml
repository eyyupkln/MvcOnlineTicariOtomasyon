
@model IEnumerable<MvcOnlineTicariOtomasyon.Models.classes.ClassGrup3>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Brands Striped Table</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Brand</th>
                    <th>Progress</th>
                    <th style="width: 40px">Count</th>
                </tr>
            </thead>
            <tbody>
                @{ int sırano = 0;}
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@{sırano++;} @sırano</td>
                        <td>@item.Brand</td>
                        @if (item.Count >= 1 && item.Count <= 4)
                        {
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            </td>

                        }
                        @if (item.Count > 4 && item.Count <= 8)
                        {
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            </td>

                        }
                        @if (item.Count >= 9)
                        {
                            <td>
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                </div>
                            </td>

                        }
                    <td>
                        @if (item.Count >= 1 && item.Count <= 4)
                        {<span class="badge bg-danger">@item.Count</span>}
                        @if (item.Count > 4 && item.Count <= 8)
                        {<span class="badge bg-warning">@item.Count</span>}
                        @if (item.Count >= 9)
                        {<span class="badge bg-success">@item.Count</span>}
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
