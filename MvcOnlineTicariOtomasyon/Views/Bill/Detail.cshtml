@model List<MvcOnlineTicariOtomasyon.Models.classes.BillDetail>
@{
    ViewBag.Title = "DepartmentPersonelDetail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="m-3">
    The Page Detail Bill
</h2>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Bill Seri No: @ViewBag.serino</li>
</ol>
<table id="tbl1" class="table table-hover mt-2 ml-2 mr-2">
    <thead>
        <tr>

            <th>
                Description
            </th>
            <th>
                Quantity
            </th>
            <th>
                Unit Price
            </th>
            <th>
                Amount
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @item.Description
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                @item.UnitPrice ₺
            </td>
            <td>
                @item.Amount ₺
            </td>
        </tr>
    }

</table>

<a href="/Bill/AddDetail?BillId=@ViewBag.id" class="btn btn-info">Add Detail</a>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>


<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>

