@model MvcOnlineTicariOtomasyon.Models.classes.Cariler

<form class="form-horizontal" method="post" action="/CariPanel/Update">
    <input type="hidden" class="form-control" id="CariId" placeholder="CariId" name="CariId" value="@Model.CariId">
    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Cari Name</label>

        <div class="col-sm-10">

            <input type="text" class="form-control" id="inputName" placeholder="Cari Name" name="CariName" value="@Model.CariName">

        </div>

    </div>

    <div class="form-group row">

        <label for="inputsurname" class="col-sm-2 col-form-label">Cari Surname</label>

        <div class="col-sm-10">

            <input type="text" class="form-control" id="inputsurname" placeholder="Cari Surname" name="CariSurname" value="@Model.CariSurname">

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">Cari City</label>

        <div class="col-sm-10">

            <input type="text" class="form-control" id="inputName2" placeholder="Cari City" name="CariCity" value="@Model.CariCity">

        </div>

    </div>

    <div class="form-group row">

        <label for="inputmail" class="col-sm-2 col-form-label">Cari Mail</label>

        <div class="col-sm-10">

            <input type="text" class="form-control" id="inputmail" placeholder="Cari Mail" name="CariMail" value="@Model.CariMail">

        </div>

    </div>

    <div class="form-group row">

        <label for="CariPassword" class="col-sm-2 col-form-label">Cari Password</label>

        <div class="col-sm-10">

            <input type="password" class="form-control" id="CariPassword" placeholder="CariPassword" name="CariPassword" value="@Model.CariPassword">

        </div>

    </div>

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <div class="checkbox">

                <label>

                    <input type="checkbox"> I agree to the <a href="#">terms and conditions</a>

                </label>

            </div>

        </div>

    </div>

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <button type="submit" class="btn btn-danger">Submit</button>

        </div>

    </div>

</form>
