@model MvcOnlineTicariOtomasyon.Models.classes.Cariler
@{
    ViewBag.Title = "Save";
}

<h2 class="m-3">
    The Page Of Update  Cari
</h2>
<form method="post" action="~/Cari/Update" class="m-3">

    <input required type="hidden" placeholder="Cari Id" class="form-control m-2" id="CariId" name="CariId" value="@Model.CariId"  />

    <input required type="text" placeholder="Cari Name" class="form-control m-2" id="CariName" name="CariName" value="@Model.CariName" />
    <input required type="text" placeholder="Cari Surname" class="form-control m-2" id="CariSurname" name="CariSurname" value="@Model.CariSurname" />
    <input required type="text" placeholder="Cari City" class="form-control m-2" id="CariCity" name="CariCity" value="@Model.CariCity" />
    <input required type="email" placeholder="Cari Mail" class="form-control m-2" id="CariMail" name="CariMail" value="@Model.CariMail" />

    @*@Html.DropDownListFor(x => x.categoryid, (List<SelectListItem>)ViewBag.ctg, new { @class = "form-control" })*@

    <button type="submit" class="btn btn-primary m-3">Update</button>

</form>