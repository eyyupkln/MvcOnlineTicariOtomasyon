@model MvcOnlineTicariOtomasyon.Models.classes.Product
@{
    ViewBag.Title = "Update";
}

<h2 class="m-3">
    The Page Of Update Product
</h2>
<form method="post" action="~/Product/Update" class="m-3">
    @Html.HiddenFor(x => x.ProductId, new { @class = "form-control" })
    <input type="hidden" placeholder="Product Id" class="form-control m-2" id="ProductId" name="ProductId" />
    @Html.LabelFor(x => x.ProductName)
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    @Html.LabelFor(x => x.Brand)
    @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
    @Html.LabelFor(x => x.Stock)
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    @Html.LabelFor(x => x.Purchaseprice)
    @Html.TextBoxFor(x => x.Purchaseprice, new { @class = "form-control" })
    @Html.LabelFor(x => x.SalesPrice)
    @Html.TextBoxFor(x => x.SalesPrice, new { @class = "form-control" })
    @Html.LabelFor(x => x.Situation)
    @Html.TextBoxFor(x => x.Situation, new { @class = "form-control" })
    @Html.LabelFor(x => x.İmage)
    @Html.TextBoxFor(x => x.İmage, new { @class = "form-control" })
    @Html.LabelFor(x => x.Category)

    @Html.DropDownListFor(x => x.categoryid, (List<SelectListItem>)ViewBag.ctg, new { @class = "form-control" })

    <button type="submit" class="btn btn-primary m-3">Update</button>

</form>



