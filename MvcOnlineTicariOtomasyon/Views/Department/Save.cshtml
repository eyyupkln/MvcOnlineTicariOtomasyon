
<h2 class="m-3">
    The Page Of Adding New Department
</h2>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.7.0.js"></script>
<form method="post" action="~/Department/Save" class="m-3">

    <input required type="hidden" placeholder="Department Name" class="form-control m-3" id="DepartmentId" name="DepartmentId" />

    <input required type="text" placeholder="Department Name" class="form-control m-3" id="DepartmentName" name="DepartmentName" />
    <button type="submit" class="btn btn-primary m-3" id="btn2">Save</button>

</form>
<script>
    $("#btn2").click(function () {
        swal("Good job!", "You clicked the button!", "success");
    })
</script>